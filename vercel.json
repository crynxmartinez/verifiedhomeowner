{
  "buildCommand": "npx prisma generate && npx prisma db push --skip-generate && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "crons": [
    {
      "path": "/api/cron/distribute",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/countdown",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/email-automation",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/publish-blogs",
      "schedule": "0 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/blog/:slug",
      "destination": "/api/blog/[slug]"
    },
    {
      "source": "/api/admin/blog/:id",
      "destination": "/api/admin/blog/[id]"
    },
    {
      "source": "/api/support/:id",
      "destination": "/api/support/[id]"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
