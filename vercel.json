{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "crons": [
    {
      "path": "/api/cron/distribute",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/countdown",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/email-automation",
      "schedule": "0 * * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
