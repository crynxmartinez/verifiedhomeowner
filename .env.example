# Database (Prisma)
DATABASE_URL="postgres://username:password@db.prisma.io:5432/postgres?sslmode=require"

# Dodo Payments
DODO_PAYMENTS_API_KEY="your_dodo_api_key"
DODO_PAYMENTS_ENVIRONMENT="test_mode"
DODO_PAYMENTS_WEBHOOK_KEY="your_webhook_key"
DODO_PRODUCT_BASIC="your_basic_product_id"
DODO_PRODUCT_ELITE="your_elite_product_id"
